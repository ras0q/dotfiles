[core]
	editor = nvim
	autoCRLF = false

[init]
	defaultBranch = main

[fetch]
	prune = true

[pull]
	rebase = true

[commit]
	gpgsign = true
	template = ~/.gittemplate.txt

[push]
	default = current

[alias]
	bprune = !git branch --merged | egrep -v '\\*|develop|main|master' | xargs git branch -d
	lo = log --oneline
	inico = commit --allow-empty -m \":seedling: initial commit\"

[gpg]
	format = ssh
