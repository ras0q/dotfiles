abbr "ll"="eza -l"
abbr "ls"="eza"

# others
abbr "bd"="brew bundle dump --global --tap --formula -f"
abbr "c"="code ."
abbr "cdf"="cd (fd -td | fzf || echo $PWD)"
abbr "cr"="crush"
abbr "e"="/mnt/c/Windows/explorer.exe ."
abbr "ge"="gemini"
abbr "gep"="gemini -p"
abbr "gf"="cd $(ghq root)/$(ghq list | fzf)"
abbr "ghb"="gh browse"
abbr "gol"="golangci-lint"
abbr "grm"="rm -i $GOPATH/bin/$(ls $GOPATH/bin | fzf)"
abbr "gg"="ghq get"
abbr "h"="hx ."
abbr "n"="nvim ."
abbr "o"="op run --"
abbr "pp"="pnpm"
abbr "sc"="systemctl"
abbr "za"="zellij a -c $(basename $PWD)_$(date -I)"
abbr "zj"="zellij"
