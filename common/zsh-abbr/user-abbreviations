# git
abbr "g"="git status"
abbr "ga"="git add -A && git commit"
abbr "gc"="git commit"
abbr "gd"="git diff"
abbr "gl"="git log --oneline"
abbr "gp"="git push"
abbr "gs"="git switch"
abbr "gss"="git status"
abbr "gt"="git stash"
abbr "gu"="git pull"
abbr "gur"="git pull --rebase"

# docker
